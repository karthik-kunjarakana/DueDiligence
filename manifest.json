{
  "manifest_version": 3,
  "name": "Due Date Reminder",
  "version": "1.0",
  "description": "A simple Chrome extension to remind you of your due dates.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}